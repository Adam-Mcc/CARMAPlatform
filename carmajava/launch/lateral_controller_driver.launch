<!--Lateral Controller Driver Node-->
<launch>
    <arg name="debug_node" default="false" doc="Set true to enable debugging on the Lateral Control Driver"/>
    <arg name="PARAM_DIR" default="$(find carma)/launch/params" doc="Directory of yaml parameter files"/>

    <node pkg="carma" type="lateral_control_driver" name="lateral_controller"
        args="gov.dot.fhwa.saxton.carma.lateralcontroldriver.LateralControlDriver">
        <env if="$(arg debug_node)" name="LATERAL_CONTROL_DRIVER_OPTS" value="$(env JVM_DEBUG_OPTS)"/>
        <rosparam command="load" file="$(arg PARAM_DIR)/LateralControllerParams.yaml"/>
    </node>
</launch>