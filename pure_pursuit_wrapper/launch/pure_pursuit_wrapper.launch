<?xml version="1.0"?>
<launch>
    <arg name="pp" default="false" />
  <!--  <remap from="final_waypoints" to="carma_final_waypoints"/> -->
    
    <group if="$(arg pp)">
        <param name="ctrl_type" value="pp"/>
        <include file="$(find waypoint_follower)/launch/pure_pursuit.launch"></include>
    </group>

    <group unless="$(arg pp)">
	<param name="ctrl_type" value="mpc"/>    
        <include file="$(find waypoint_follower)/launch/mpc_follower.launch"></include>
    </group>

    <!-- Pure Pursuit Wrapper Node -->
    <node pkg="pure_pursuit_wrapper" type="pure_pursuit_wrapper_node" name="pure_pursuit_wrapper_node" output="screen">
        <rosparam command="load" file="$(find pure_pursuit_wrapper)/config/default.yaml" />
    </node>
</launch>
